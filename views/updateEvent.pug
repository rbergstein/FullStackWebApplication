     .panel.panel-default


       form(name='EventForm' method='post' action=`/updateEvent/${msgCopy.event_id}`)
         table.table.table-bordered.table-hover
           tbody
             tr
               td.col-md-6 Event
               td.col-md-6
                 .form-group
                   input.form-control(type='text' name='event_event' required='' maxlength='30' value=(msgCopy.event_event || ""))
             tr
               td.col-md-6 Day
               td.col-md-6
                 .form-group
                   select.form-control(name='event_day')
                     each day in ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday']
                       option(value=day selected=(msgCopy.event_day === event_day)) #{day}
             tr
               td.col-md-6 Start Time
               td.col-md-6
                 .form-group
                   input.form-control(type='time' name='event_start' required='' value=(msgCopy.event_start || ""))
             tr
               td.col-md-6 End Time
               td.col-md-6
                 .form-group
                   input.form-control(type='time' name='event_end' required='' value=(msgCopy.event_end || ""))
             tr
               td.col-md-6 Phone
               td.col-md-6
                 .form-group
                   input.form-control(type='text' name='event_phone' required='' maxlength='60' value=(msgCopy.event_phone || ""))
             tr
               td.col-md-6 Location
               td.col-md-6
                 .form-group
                   input.form-control(type='text' name='event_location' required='' maxlength='100' value=(msgCopy.event_location || ""))
             tr
               td.col-md-6 Extra Info
               td.col-md-6
                 .form-group
                   input.form-control(type='text' name='event_info' required='' maxlength='100' value=(msgCopy.event_info || ""))
             tr
               td.col-md-6 URL for the Extra Info
               td.col-md-6
                 .form-group
                   input.form-control(type='url' name='event_url' required='' maxlength='200' value=(msgCopy.event_url || ""))
             tr
               td(colspan='2')
                 input.btn.btn-primary(type='submit' value='Submit')
